function resetMenuItems() {
    if (!confirm('Reset menu items to default?')) return;
    $('#menuItemsBody').empty();
    defaultMenuItems.forEach(item => addMenuItemRow(item));
}

function saveShell() {
    const menuItems = [];
    $('#menuItemsBody tr').each(function() {
        const key = $(this).find('.mi-key').val().trim().toUpperCase();
        const label = $(this).find('.mi-label').val().trim();
        const icon = $(this).find('.mi-icon').val().trim();
        const url = $(this).find('.mi-url').val().trim();
        if (key.length === 1 && label && url) {
            menuItems.push({ key, label, icon: icon || 'circle', url });
        }
    });

    const variant = $('input[name="bbsVariant"]:checked').val() || 'cards';
    const payload = {
        shell: {
            active: $('#activeShell').val(),
            lock_shell: $('#lockShell').is(':checked'),
            bbs_menu: {
                variant: variant,
                ansi_file: $('#ansiFile').val().trim(),
                menu_items: menuItems.length > 0 ? menuItems : defaultMenuItems
            }
        }
    };
    showStatus('shellStatus', 'info', 'Saving...');
    $.ajax({
        url: '/admin/api/appearance/shell',
        method: 'POST',
        contentType: 'application/json',
        data: JSON.stringify(payload),
        success: function() { showStatus('shellStatus', 'success', 'Saved! Reload the page to see the new shell.'); },
        error: function(xhr) { showStatus('shellStatus', 'danger', xhr.responseJSON?.error || 'Save failed'); }
    });
}

// ---- Shell Art Management ----
function loadShellArtList(selectedFile) {
    $.get('/admin/api/shell-art', function(data) {
        const files = data.files || [];
        const current = selectedFile !== undefined ? selectedFile : $('#ansiFile').val();
        const $sel = $('#ansiFileSelect');
        $sel.empty().append('<option value="">(none selected)</option>');
        files.forEach(function(f) {
            const opt = $('<option>').val(f.name).text(f.name + ' (' + formatBytes(f.size) + ')');
            if (f.name === current) opt.prop('selected', true);
            $sel.append(opt);
        });
        $('#ansiFile').val($sel.val() || '');
        $('#deleteShellArtBtn').toggle($sel.val() !== '');
    }).fail(function() {
        $('#shellArtUploadStatus').text('Could not load file list.').addClass('text-danger');
    });
}

function uploadShellArtFile(input) {
    if (!input.files || !input.files[0]) return;
    const $status = $('#shellArtUploadStatus');
    $status.text('Uploading...').removeClass('text-danger text-success');
    const formData = new FormData();
    formData.append('file', input.files[0]);
    $.ajax({
        url: '/admin/api/shell-art/upload',
        method: 'POST',
        data: formData,
        processData: false,
        contentType: false,
        success: function(data) {
            $status.text('Uploaded: ' + data.name).addClass('text-success');
            loadShellArtList(data.name);
            input.value = '';
        },
        error: function(xhr) {
            $status.text('Upload failed: ' + (xhr.responseJSON?.error || 'Unknown error')).addClass('text-danger');
            input.value = '';
        }
    });
}

function deleteSelectedShellArt() {
    const name = $('#ansiFileSelect').val();
    if (!name) return;
    if (!confirm('Delete ' + name + '?')) return;
    $.ajax({
        url: '/admin/api/shell-art/' + encodeURIComponent(name),
        method: 'DELETE',
        success: function() {
            $('#shellArtUploadStatus').text('Deleted: ' + name).addClass('text-success');
            loadShellArtList('');
        },
        error: function(xhr) {
            $('#shellArtUploadStatus').text('Delete failed: ' + (xhr.responseJSON?.error || 'Unknown error')).addClass('text-danger');
        }
    });
}

function formatBytes(b) {
    if (b < 1024) return b + ' B';
    return Math.round(b / 1024) + ' KB';
}

// ---- Helpers ----
function showStatus(id, type, msg) {
    const icons = { success: 'check', danger: 'exclamation-triangle', info: 'spinner fa-spin', warning: 'exclamation-circle' };
    const icon = icons[type] || 'info-circle';
    const colors = { success: 'text-success', danger: 'text-danger', info: 'text-muted', warning: 'text-warning' };
    const color = colors[type] || 'text-muted';
    $('#' + id).html(`<i class="fas fa-${icon} me-1"></i><span class="${color}">${escHtml(msg)}</span>`);
    if (type === 'success') {
        setTimeout(() => $('#' + id).html(''), 3000);
    }
}

function saveMessageReader() {
    const payload = {
        message_reader: {
            scrollable_body: $('#mrScrollableBody').is(':checked')
        }
    };
    $.post('/admin/api/appearance/message-reader', JSON.stringify(payload), null, 'json')
        .done(function(r) {
            if (r.success) {
                $('#messageReaderStatus').text('Saved').removeClass('text-danger').addClass('text-success');
                setTimeout(() => $('#messageReaderStatus').text(''), 3000);
            } else {
                $('#messageReaderStatus').text('Error: ' + (r.error || 'Unknown')).addClass('text-danger');
            }
        })
        .fail(function(xhr) {
            $('#messageReaderStatus').text('Error: ' + (xhr.responseJSON?.error || 'Request failed')).addClass('text-danger');
        });
}

function showAlert(type, msg) {
    $('#appearanceAlert').html(`<div class="alert alert-${type} alert-dismissible"><button type="button" class="btn-close" data-bs-dismiss="alert"></button>${escHtml(msg)}</div>`);
}

function escHtml(s) {
    if (!s) return '';
    return String(s).replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;').replace(/'/g,'&#39;');
}
