{% extends "base.twig" %}

{% block title %}Development History - {{ parent() }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-history"></i>
                Development History
            </h2>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Recent Updates & Changes</h6>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    This page shows the recent development changes and improvements made to {{ system_name }}.
                    Updates are listed in chronological order with the most recent changes first.
                </p>

                <div class="updates-container">
                    {% include 'recent_updates.twig' %}
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h6 class="mb-0">About {{ system_name }}</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Version:</dt>
                    <dd class="col-sm-9">{{ app_full_version }}</dd>

                    <dt class="col-sm-3">System:</dt>
                    <dd class="col-sm-9">{{ system_name }}</dd>

                    <dt class="col-sm-3">FidoNet Node:</dt>
                    <dd class="col-sm-9">{{ fidonet_origin }}</dd>

                    <dt class="col-sm-3">Sysop:</dt>
                    <dd class="col-sm-9">{{ sysop_name }}</dd>

                    <dt class="col-sm-3">Source Code:</dt>
                    <dd class="col-sm-9">
                        <a href="https://github.com/awehttam/binkterm-php" target="_blank" rel="noopener">
                            <i class="fab fa-github"></i> GitHub Repository
                        </a>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<style>
/* Development History Page Styling */
.updates-container .update-item {
    border-left: 3px solid #dee2e6;
    padding-left: 1rem;
    margin-bottom: 2rem;
    transition: all 0.2s ease;
}

.updates-container .update-item:hover {
    border-left-color: #0d6efd;
    background-color: #f8f9fa;
    border-radius: 0.375rem;
    padding: 1rem;
    margin-left: -1rem;
    padding-left: 2rem;
}

.updates-container .update-item h6 {
    margin-bottom: 0.5rem;
}

.updates-container .update-item .badge {
    font-size: 0.7em;
    padding: 0.35em 0.65em;
}

.updates-container .update-item p {
    margin-bottom: 0.5rem;
    line-height: 1.4;
}

.updates-container .update-item small {
    font-size: 0.8em;
}

/* Version badge styling */
.updates-container .update-item small.text-muted {
    background: #e9ecef;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-weight: 500;
}

/* Timeline effect */
.updates-container {
    position: relative;
}

.updates-container::before {
    content: '';
    position: absolute;
    left: -2px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, #0d6efd, #dee2e6);
    border-radius: 1px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .updates-container .update-item {
        padding-left: 0.75rem;
        margin-left: 0;
    }

    .updates-container .update-item:hover {
        margin-left: 0;
        padding-left: 1.5rem;
    }

    .updates-container::before {
        left: -1px;
    }
}
</style>
{% endblock %}