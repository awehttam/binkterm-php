{% extends "base.twig" %}

{% block title %}Chat - {{ system_name }}{% endblock %}

{% block content %}
<div class="chat-page">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="fas fa-comment-dots"></i> Chat</h1>
        <a href="/whosonline" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-user-friends"></i> Who's Online
        </a>
    </div>

    <div class="row g-3">
        <div class="col-lg-3">
            <div class="card chat-panel">
                <div class="card-header">
                    <i class="fas fa-layer-group me-2"></i> Rooms
                </div>
                <div class="card-body p-0">
                    <div id="chatRoomsList" class="chat-list text-muted"></div>
                </div>
            </div>
            <div class="card chat-panel mt-3">
                <div class="card-header">
                    <i class="fas fa-user-friends me-2"></i> Direct
                </div>
                <div class="card-body p-0">
                    <div id="chatUsersList" class="chat-list text-muted"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card chat-panel chat-thread-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <span class="chat-thread-title" id="chatThreadTitle">Lobby</span>
                        <small class="text-muted" id="chatThreadMeta"></small>
                    </div>
                    <span class="badge bg-secondary" id="chatUnreadBadge" style="display:none;">0</span>
                </div>
                <div class="card-body chat-thread" id="chatThread"></div>
                <div class="card-footer">
                    <div class="input-group">
                        <input type="text" class="form-control" id="chatInput" placeholder="Type a message...">
                        <button class="btn btn-primary" id="chatSendBtn">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="chatContextMenu" class="chat-context-menu d-none">
    <button type="button" class="dropdown-item" data-action="kick">
        <i class="fas fa-user-slash me-2"></i> Kick
    </button>
    <button type="button" class="dropdown-item text-danger" data-action="ban">
        <i class="fas fa-ban me-2"></i> Ban
    </button>
</div>
{% endblock %}

{% block scripts %}
<link href="/css/chat-page.css?v={{ app_version }}" rel="stylesheet">
<script src="/js/chat-page.js?v={{ app_version }}"></script>
{% endblock %}
