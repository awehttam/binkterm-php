{% extends "base.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-bookmark-star me-2"></i>
                        Manage Your Echoarea Subscriptions
                    </h5>
                    <small class="text-muted">Subscribe to echoareas to see their messages</small>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div id="subscription-status" class="alert d-none" role="alert"></div>
                            
                            <div class="mb-3">
                                <input type="text" 
                                       class="form-control" 
                                       id="search-echoareas" 
                                       placeholder="Search echoareas...">
                            </div>
                            
                            <div id="echoareas-list">
                                {% for echoarea in echoareas %}
                                <div class="card mb-3 echoarea-card" data-tag="{{ echoarea.tag|lower }}">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-1">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input subscription-toggle" 
                                                           type="checkbox" 
                                                           id="sub-{{ echoarea.id }}"
                                                           data-echoarea-id="{{ echoarea.id }}"
                                                           {{ echoarea.subscribed ? 'checked' : '' }}>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <h6 class="mb-1 d-flex align-items-center">
                                                    <span class="badge me-2" style="background-color: {{ echoarea.color }};">
                                                        {{ echoarea.tag }}
                                                    </span>
                                                    {% if echoarea.is_default_subscription %}
                                                        <i class="bi bi-star-fill text-warning" title="Default subscription"></i>
                                                    {% endif %}
                                                </h6>
                                            </div>
                                            <div class="col-md-5">
                                                <p class="mb-1">{{ echoarea.description }}</p>
                                                <small class="text-muted">
                                                    {{ echoarea.message_count }} messages
                                                    {% if echoarea.subscribed %}
                                                        â€¢ Subscribed 
                                                        {% if echoarea.subscription_type == 'auto' %}
                                                            (automatic)
                                                        {% else %}
                                                            ({{ echoarea.subscribed_at|date('M j, Y') }})
                                                        {% endif %}
                                                    {% endif %}
                                                </small>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                {% if echoarea.subscribed %}
                                                    <a href="/echomail/{{ echoarea.tag }}" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye me-1"></i>
                                                        View Messages
                                                    </a>
                                                {% else %}
                                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                                        <i class="bi bi-eye-slash me-1"></i>
                                                        Not Subscribed
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">
                                        <i class="bi bi-info-circle me-2"></i>
                                        Subscription Info
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div id="subscription-stats">
                                        {% set subscribed_count = echoareas|filter(e => e.subscribed)|length %}
                                        {% set total_count = echoareas|length %}
                                        
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between">
                                                <span>Subscribed:</span>
                                                <strong>{{ subscribed_count }} / {{ total_count }}</strong>
                                            </div>
                                            <div class="progress mt-1" style="height: 5px;">
                                                <div class="progress-bar" 
                                                     style="width: {{ total_count > 0 ? (subscribed_count / total_count * 100) : 0 }}%">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <hr>
                                    
                                    <h6>How Subscriptions Work</h6>
                                    <ul class="small text-muted mb-0">
                                        <li>New users are automatically subscribed to popular echoareas</li>
                                        <li>You can subscribe/unsubscribe to any echoarea</li>
                                        <li>Only subscribed echoareas appear in your message lists</li>
                                        <li><i class="bi bi-star-fill text-warning"></i> indicates default echoareas</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-echoareas');
    const echoareaCards = document.querySelectorAll('.echoarea-card');
    const subscriptionToggles = document.querySelectorAll('.subscription-toggle');
    const statusDiv = document.getElementById('subscription-status');
    
    // Search functionality
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        echoareaCards.forEach(card => {
            const tag = card.dataset.tag;
            const description = card.querySelector('p').textContent.toLowerCase();
            const matches = tag.includes(searchTerm) || description.includes(searchTerm);
            card.style.display = matches ? 'block' : 'none';
        });
    });
    
    // Subscription toggle functionality
    subscriptionToggles.forEach(toggle => {
        toggle.addEventListener('change', function() {
            const echoareaId = this.dataset.echoareaId;
            const action = this.checked ? 'subscribe' : 'unsubscribe';
            const originalState = !this.checked;
            
            // Disable toggle while processing
            this.disabled = true;
            
            fetch('/api/subscriptions/user', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    action: action,
                    echoarea_id: parseInt(echoareaId)
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showStatus(action === 'subscribe' ? 'Subscribed successfully!' : 'Unsubscribed successfully!', 'success');
                    // Refresh page to update stats and view buttons
                    setTimeout(() => location.reload(), 1000);
                } else {
                    // Revert toggle state
                    this.checked = originalState;
                    showStatus('Failed to update subscription. Please try again.', 'danger');
                }
            })
            .catch(error => {
                // Revert toggle state
                this.checked = originalState;
                showStatus('Network error. Please try again.', 'danger');
            })
            .finally(() => {
                this.disabled = false;
            });
        });
    });
    
    function showStatus(message, type) {
        statusDiv.className = `alert alert-${type}`;
        statusDiv.textContent = message;
        statusDiv.classList.remove('d-none');
        
        setTimeout(() => {
            statusDiv.classList.add('d-none');
        }, 3000);
    }
});
</script>
{% endblock %}